@model MvcMovie.Models.ReviewCreateModel

@{
    ViewBag.Title = "Reviews";
}

<h2>Reviews</h2>

@using (Html.BeginForm("CreateReview", "Movies", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Review.Text, htmlAttributes: new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Review.Text, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.Review.Text, "", new {@class = "text-danger"})
        </div>
    </div>
    @Html.HiddenFor(m => m.MovieId)
    @Html.HiddenFor(m => m.MovieTitle)
    @Html.HiddenFor(m => m.Review.Text)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}