@model MvcMovie.Models.ReviewViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Reviews for @Model.MovieTitle</h2>

<p>
    @Html.ActionLink("Leave Review", "Create", new {Id = Model.MovieId})
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Review.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Review.ReviewerEmailAddress)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.Review.Rating)
        </th>
        <th class="col-md-1"></th>
        <th> </th>
    </tr>

    @foreach (var item in Model.MovieReviews)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewerEmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {Id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {Id = item.Id})
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to Movies", "Index", "Movies")
</div>
